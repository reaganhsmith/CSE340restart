<!-- THE CONTENT HEADING -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
<%- messages() %>

<form action="/account/register" method="post">
    <label for="first-name">First Name:</label>
    <input type="text" name="account_firstname" required>
  
    <label for="last-name">Last Name:</label>
    <input type="text" name="account_lastname" required>
  
    <label for="email">Email Address:</label>
    <input type="email" name="account_email" required>
  
    <label for="password">Password:</label>
    <input type="password" id="pword" name="account_password" required>
    <span id="pswdBtn"> Show Password</span>
  
    <button type="submit" value="Register"> Submit </button>
</form>

<script>
    const pswdBtn = document.querySelector("#pswdBtn");
    pswdBtn.addEventListener("click", function() {
    const pswdInput = document.getElementById("pword");
     const type = pswdInput.getAttribute("type");
    if (type == "password") {
        pswdInput.setAttribute("type", "text");
        pswdBtn.innerHTML = "Hide Password";
  } else {
        pswdInput.setAttribute("type", "password");
        pswdBtn.innerHTML = "Show Password";
  }
});
</script>


