<!-- THE CONTENT HEADING -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>


<!-- Messages or error mesages  -->
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<!-- forms to add a new inventory -->

<form id="addClassForm" action="/inv/add-inventory" method="post">
  <%- form %>

    <label for="make">Make:</label>
    <input type="text" id="inv_make" name="inv_make" minlength="3" required placeholder="min of 3 characters">
 
    <label for="model">Model:</label>
    <input type="text" id="model" name="inv_model" minlength="3" required placeholder="min of 3 characters">

    <label for="description">Description:</label>
    <textarea id="description" name="inv_description" rows="4" cols="50"></textarea>

    <label for="imagePath">Image Path:</label>
    <input type="text" id="imagePath" name="inv_image" required>

    <label for="thumbnailPath">Thumbnail Path:</label>
    <input type="text" id="thumbnailPath" name="inv_thumbnail" required>

    <label for="price">Price:</label>
    <input type="number" id="price" name="inv_price" step="any" required placeholder="decimal or integer"> 


    <label for="year">Year:</label>
    <input type="number" id="year" name="inv_year" min="1900" max="9999" required placeholder="4-digit year">
 
    <label for="miles">Miles:</label>
    <input type="number" id="miles" name="inv_miles" min="0" required placeholder="digits only">

    <label for="color">Color:</label>
    <input type="text" id="color" name="inv_color" required>

    <button type="submit" value="Login"> Submit</button>

</form>